<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ffffff">
    <ScrollView
        android:id="@+id/scrollTransferencias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintVertical_bias="0.13999999" >
        <LinearLayout
            android:id="@+id/layoutTransferencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollTransferencias">
            <TextView
                android:id="@+id/info1"
                android:layout_width="350dp"
                android:layout_height="137dp"
                android:layout_gravity="center"
                android:background="@drawable/list"
                android:onClick="autorizar"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="3dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/titillium_web"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                android:textColor="#202156"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutTransferencias"/>
            <TextView
                android:id="@+id/info2"
                android:layout_width="350dp"
                android:layout_height="137dp"
                android:layout_gravity="center"
                android:background="@drawable/list"
                android:layout_weight="1"
                android:onClick="autorizar"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="3dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/titillium_web"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                android:textColor="#202156"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info2"/>
            <TextView
            android:id="@+id/info3"
            android:layout_width="350dp"
            android:layout_height="137dp"
            android:onClick="autorizar"
            android:layout_gravity="center"
            android:background="@drawable/list"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/titillium_web"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
            android:textColor="#202156"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info3"/>
            <TextView
                android:id="@+id/info4"
                android:layout_width="350dp"
                android:layout_height="137dp"
                android:layout_gravity="center"
                android:onClick="autorizar"
                android:background="@drawable/list"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/titillium_web"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                android:textColor="#202156"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info3"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>